    "version": "0.2.0",
    "configurations": [
        {
            "name": "Django Run Server",
            "type": "debugpy",
            "request": "launch",
            "args": [
                "runserver",
                "0.0.0.0:8000"
            ],
            "django": true,
            "autoStartBrowser": false,
            "program": "${workspaceFolder}/tracker/manage.py"
        },
        {
            "name": "Django Run Install Demo Data",
            "type": "debugpy",
            "request": "launch",
            "args": [
                "install_demo_data",
            ],
            "django": true,
            "autoStartBrowser": false,
            "program": "${workspaceFolder}/tracker/manage.py"
        },
        {
            "name": "Django Tests",
            "type": "debugpy",
            "request": "launch",
            "args": [
                "test",
            ],
            "django": true,
            "autoStartBrowser": false,
            "cwd": "${workspaceFolder}/tracker",
            "program": "${workspaceFolder}/tracker/manage.py"
        },
    ]
}
